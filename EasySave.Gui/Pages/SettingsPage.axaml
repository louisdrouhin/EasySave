<?xml version="1.0" encoding="UTF-8"?>
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:vm="using:EasySave.Gui.ViewModels"
             x:Class="EasySave.GUI.Pages.SettingsPage"
             x:DataType="vm:SettingsPageViewModel">
    <Border Padding="20" Background="#FFE6D5">
        <Grid RowDefinitions="Auto,*">
            <!-- Header Section -->
            <Grid Grid.Row="0" ColumnDefinitions="*" Margin="0,0,0,20">
                <StackPanel Spacing="8">
                    <TextBlock Text="{Binding HeaderTitle}"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="#15171D"/>
                    <TextBlock Text="{Binding HeaderSubtitle}"
                               FontSize="14"
                               Foreground="#666666" />
                </StackPanel>
            </Grid>

            <!-- Content Section -->
            <ScrollViewer Grid.Row="1">
                <StackPanel Spacing="20" Margin="10">
                    <!-- Logs Section -->
                    <Border Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="20">
                        <StackPanel Spacing="12">
                            <TextBlock Text="{Binding LogsSectionTitle}"
                                       FontSize="15"
                                       FontWeight="Bold"
                                       Foreground="#15171D"/>
                            <Border Height="1" Background="#E0E0E0" />

                            <!-- Logs Path -->
                            <Grid ColumnDefinitions="140,*" RowDefinitions="Auto">
                                <TextBlock Grid.Column="0"
                                           Text="{Binding LogsPathLabel}"
                                           FontSize="12"
                                           FontWeight="Bold"
                                           Foreground="#666666"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding LogsPathValue}"
                                           FontSize="12"
                                           Foreground="#15171D"
                                           TextWrapping="Wrap"/>
                            </Grid>

                            <!-- Logs Format -->
                            <Grid ColumnDefinitions="140,*" RowDefinitions="Auto">
                                <TextBlock Grid.Column="0"
                                           Text="{Binding LogsFormatLabel}"
                                           FontSize="12"
                                           FontWeight="Bold"
                                           Foreground="#666666"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding LogsFormatValue}"
                                           FontSize="12"
                                           Foreground="#15171D"/>
                            </Grid>

                            <!-- Format Buttons -->
                            <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                                <Button Command="{Binding SetJsonFormatCommand}"
                                        Content="JSON"
                                        Padding="12,8"
                                        FontSize="12"/>
                                <Button Command="{Binding SetXmlFormatCommand}"
                                        Content="XML"
                                        Padding="12,8"
                                        FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- State Section -->
                    <Border Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="20">
                        <StackPanel Spacing="12">
                            <TextBlock Text="{Binding StateSectionTitle}"
                                       FontSize="15"
                                       FontWeight="Bold"
                                       Foreground="#15171D"/>
                            <Border Height="1" Background="#E0E0E0" />

                            <!-- State Path -->
                            <Grid ColumnDefinitions="140,*" RowDefinitions="Auto">
                                <TextBlock Grid.Column="0"
                                           Text="{Binding StatePathLabel}"
                                           FontSize="12"
                                           FontWeight="Bold"
                                           Foreground="#666666"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding StatePathValue}"
                                           FontSize="12"
                                           Foreground="#15171D"
                                           TextWrapping="Wrap"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Encryption Section -->
                    <Border Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="20">
                        <StackPanel Spacing="12">
                            <TextBlock Text="{Binding EncryptionSectionTitle}"
                                       FontSize="15"
                                       FontWeight="Bold"
                                       Foreground="#15171D"/>
                            <Border Height="1" Background="#E0E0E0" />

                            <!-- Extensions Label -->
                            <TextBlock Text="{Binding ExtensionsLabel}"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="#666666"/>

                            <!-- Extensions Panel (read-only display) -->
                            <WrapPanel Orientation="Horizontal">
                                <ItemsControl ItemsSource="{Binding EncryptionExtensions}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#F3F4F6"
                                                    CornerRadius="6"
                                                    Padding="8,3"
                                                    Margin="4">
                                                <TextBlock Text="{Binding .}"
                                                           FontSize="11"
                                                           FontWeight="Bold"
                                                           Foreground="#374151"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </WrapPanel>
                        </StackPanel>
                    </Border>

                    <!-- Priority Extensions Section -->
                    <Border Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="20">
                        <StackPanel Spacing="12">
                            <TextBlock Text="{Binding PrioritySectionTitle}"
                                       FontSize="15"
                                       FontWeight="Bold"
                                       Foreground="#15171D"/>
                            <Border Height="1" Background="#E0E0E0" />

                            <!-- Priority Extensions Label -->
                            <TextBlock Text="{Binding PriorityExtensionsLabel}"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="#666666"/>

                            <!-- Priority Extensions Panel with remove capability -->
                            <WrapPanel Orientation="Horizontal">
                                <ItemsControl ItemsSource="{Binding PriorityExtensions}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate DataType="vm:ExtensionItemViewModel">
                                            <Button Background="#F3F4F6"
                                                    CornerRadius="6"
                                                    Padding="8,3"
                                                    Margin="4"
                                                    Command="{Binding RemoveCommand}"
                                                    BorderThickness="0"
                                                    HorizontalContentAlignment="Center"
                                                    VerticalContentAlignment="Center">
                                                <TextBlock Text="{Binding DisplayText}"
                                                           FontSize="11"
                                                           FontWeight="Bold"
                                                           Foreground="#374151"/>
                                            </Button>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </WrapPanel>

                            <!-- Add Priority Extension -->
                            <Grid ColumnDefinitions="*,Auto" Margin="0,10,0,0">
                                <TextBox Text="{Binding NewPriorityExtensionText}"
                                         Grid.Column="0"
                                         Watermark=".ext"
                                         Margin="0,0,10,0"/>
                                <Button Command="{Binding AddPriorityExtensionCommand}"
                                        Grid.Column="1"
                                        Content="+"
                                        Padding="15,5"/>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- Business Applications Section -->
                    <Border Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="20">
                        <StackPanel Spacing="12">
                            <TextBlock Text="{Binding BusinessAppsSectionTitle}"
                                       FontSize="15"
                                       FontWeight="Bold"
                                       Foreground="#15171D"/>
                            <Border Height="1" Background="#E0E0E0" />

                            <!-- Apps Label -->
                            <TextBlock Text="{Binding AppsLabel}"
                                       FontSize="12"
                                       FontWeight="Bold"
                                       Foreground="#666666"/>

                            <!-- Apps Panel -->
                            <WrapPanel Orientation="Horizontal">
                                <ItemsControl ItemsSource="{Binding BusinessApps}">
                                    <ItemsControl.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <WrapPanel Orientation="Horizontal" />
                                        </ItemsPanelTemplate>
                                    </ItemsControl.ItemsPanel>
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <Border Background="#F3F4F6"
                                                    CornerRadius="6"
                                                    Padding="8,3"
                                                    Margin="4">
                                                <TextBlock Text="{Binding .}"
                                                           FontSize="11"
                                                           FontWeight="Bold"
                                                           Foreground="#374151"/>
                                            </Border>
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </WrapPanel>
                        </StackPanel>
                    </Border>

                    <!-- Language Section -->
                    <Border Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="20">
                        <StackPanel Spacing="12">
                            <TextBlock Text="{Binding LanguageSectionTitle}"
                                       FontSize="15"
                                       FontWeight="Bold"
                                       Foreground="#15171D"/>
                            <Border Height="1" Background="#E0E0E0" />

                            <!-- Current Language Display -->
                            <Grid ColumnDefinitions="140,*" RowDefinitions="Auto">
                                <TextBlock Grid.Column="0"
                                           Text="{Binding CurrentLanguageLabel}"
                                           FontSize="12"
                                           FontWeight="Bold"
                                           Foreground="#666666"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding CurrentLanguageValue}"
                                           FontSize="12"
                                           Foreground="#15171D"/>
                            </Grid>

                            <!-- Language Buttons -->
                            <StackPanel Orientation="Horizontal" Spacing="10" Margin="0,10,0,0">
                                <Button Command="{Binding SetFrenchLanguageCommand}"
                                        Content="FranÃ§ais"
                                        Classes="language-button"
                                        Padding="12,8"
                                        FontSize="12"/>
                                <Button Command="{Binding SetEnglishLanguageCommand}"
                                        Content="English"
                                        Classes="language-button"
                                        Padding="12,8"
                                        FontSize="12"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>

                    <!-- About Section -->
                    <Border Background="White"
                            BorderBrush="#E0E0E0"
                            BorderThickness="1"
                            CornerRadius="10"
                            Padding="20">
                        <StackPanel Spacing="12">
                            <TextBlock Text="{Binding AboutSectionTitle}"
                                       FontSize="15"
                                       FontWeight="Bold"
                                       Foreground="#15171D"/>
                            <Border Height="1" Background="#E0E0E0" />

                            <!-- Version Display -->
                            <Grid ColumnDefinitions="140,*" RowDefinitions="Auto">
                                <TextBlock Grid.Column="0"
                                           Text="{Binding VersionLabel}"
                                           FontSize="12"
                                           FontWeight="Bold"
                                           Foreground="#666666"/>
                                <TextBlock Grid.Column="1"
                                           Text="{Binding VersionValue}"
                                           FontSize="12"
                                           Foreground="#15171D"/>
                            </Grid>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>