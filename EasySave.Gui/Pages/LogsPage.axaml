<?xml version="1.0" encoding="UTF-8"?>
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:pages="clr-namespace:EasySave.GUI.Pages"
             x:Class="EasySave.GUI.Pages.LogsPage"
             x:CompileBindings="False">
    <Grid RowDefinitions="Auto,*">
        <!-- Titre et contrÃ´les -->
        <StackPanel Grid.Row="0"
                    Margin="20"
                    Spacing="10">
            <TextBlock Text="Logs des sauvegardes"
                       FontSize="24"
                       FontWeight="Bold"
                       Foreground="Black"
                       Margin="0,0,0,10" />
            <StackPanel Orientation="Horizontal"
                        Spacing="10">
                <Button x:Name="OpenFolderButton"
                        Content="Ouvrir le dossier de logs" />
                <TextBlock Text="Total des logs:"
                           VerticalAlignment="Center"
                           Margin="20,0,5,0"
                           Foreground="Black" />
                <TextBlock x:Name="LogsCountText"
                           Text="0"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           Foreground="Black" />
            </StackPanel>
        </StackPanel>
        <!-- ListBox simple pour afficher les logs -->
        <Border Grid.Row="1"
                Margin="20,0,20,20"
                BorderBrush="Gray"
                BorderThickness="1"
                CornerRadius="5"
                Background="White">
            <ListBox x:Name="LogsListBox"
                     Background="White"
                     Foreground="Black"
                     Padding="10">
                <ListBox.Styles>
                    <Style Selector="ListBoxItem:selected /template/ ContentPresenter">
                        <Setter Property="Background"
                                Value="#FB8A3C" />
                    </Style>
                    <Style Selector="ListBoxItem:selected">
                        <Setter Property="Background"
                                Value="#FB8A3C" />
                        <Setter Property="Foreground"
                                Value="White" />
                    </Style>
                </ListBox.Styles>
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding LogText}"
                                   Foreground="Black"
                                   TextWrapping="Wrap"
                                   Margin="0,5" />
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>
    </Grid>
</UserControl>