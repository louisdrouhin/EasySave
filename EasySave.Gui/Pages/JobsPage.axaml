<?xml version="1.0" encoding="UTF-8"?>
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:comp="clr-namespace:EasySave.GUI.Components"
             x:Class="EasySave.GUI.Pages.JobsPage">
    <Border Padding="20"
            Background="#FFE6D5">
        <Grid RowDefinitions="Auto,*">
            <!-- Header -->
            <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,20">
                <StackPanel Grid.Column="0" Spacing="8">
                    <TextBlock Text="Saved Jobs"
                               FontSize="28"
                               FontWeight="Bold"
                               Foreground="#15171D" />
                    <TextBlock Text="Manage your backup jobs"
                               FontSize="14"
                               Foreground="#666666" />
                </StackPanel>
                <Button Grid.Column="1"
                        x:Name="CreateJobButton"
                        Content="+ New Job"
                        Background="#3B82F6"
                        Foreground="White"
                        BorderThickness="0"
                        CornerRadius="6"
                        Padding="16,8"
                        FontSize="14"
                        VerticalAlignment="Top" />
            </Grid>
            <!-- Jobs List -->
            <ScrollViewer Grid.Row="1">
                <StackPanel x:Name="JobsStackPanel"
                            Orientation="Vertical" />
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>