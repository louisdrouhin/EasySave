<?xml version="1.0" encoding="UTF-8"?>
<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:comp="clr-namespace:EasySave.GUI.Components"
             x:Class="EasySave.GUI.Pages.JobsPage">
    <UserControl.Styles>
    </UserControl.Styles>
    <Border Padding="20"
            Background="#FFE6D5">
        <Grid RowDefinitions="Auto,Auto,*">
            
            <Grid Grid.Row="0" ColumnDefinitions="*,Auto" Margin="0,0,0,20">
                <StackPanel Grid.Column="0" Spacing="8">
                    <TextBlock x:Name="HeaderTitleText"
                               FontSize="22"
                               FontWeight="Bold"
                               Foreground="#15171D"/>
                    <TextBlock x:Name="HeaderSubtitleText"
                               FontSize="14"
                               Foreground="#666666" />
                </StackPanel>
                <Button Grid.Column="1"
                        x:Name="CreateJobButton"
                        Classes="button-primary-orange"
                        Padding="16,10"
                        VerticalAlignment="Top" />
            </Grid>

            <!-- Row 1 : Barre de sélection multiple (visible si >= 1 job coché) -->
            <Border Grid.Row="1"
                    x:Name="SelectionBar"
                    IsVisible="False"
                    Background="#FFFFFF"
                    BorderBrush="#E0E0E0"
                    BorderThickness="1"
                    CornerRadius="10"
                    Padding="15,10"
                    Margin="0,0,0,15">
                <Grid ColumnDefinitions="*,Auto,Auto">
                    <TextBlock x:Name="SelectionCountText"
                               Grid.Column="0"
                               VerticalAlignment="Center"
                               FontSize="14"
                               Foreground="#374151" />
                    <Button Grid.Column="1"
                            x:Name="DeselectAllButton"
                            Classes="button-gray-cancel"
                            Padding="12,8"
                            Margin="0,0,10,0" />
                    <Button Grid.Column="2"
                            x:Name="RunSelectedButton"
                            Classes="button-green"
                            Padding="12,8" />
                </Grid>
            </Border>

            <ScrollViewer Grid.Row="2">
                                    <StackPanel x:Name="JobsStackPanel"
                                                Orientation="Vertical" 
                                                Spacing="15"
                                                Margin="10"/>                </ScrollViewer>        </Grid>
    </Border>
</UserControl>