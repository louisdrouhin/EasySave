<?xml version="1.0" encoding="UTF-8"?>
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="EasySave.GUI.Dialogs.PasswordDialog"
        Title="Enter Encryption Password"
        Width="400"
        Height="200"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
    <StackPanel Spacing="15" Margin="20">
        <TextBlock Text="Enter password for encryption (optional)"
                   FontSize="14"
                   Foreground="#15171D" />
        <TextBox x:Name="PasswordInput"
                 PasswordChar="â€¢"
                 Foreground="#15171D"
                 Background="White"
                 BorderBrush="#E0E0E0"
                 BorderThickness="1"
                 CornerRadius="6"
                 Padding="12"
                 Height="40"
                 Watermark="Leave empty for no encryption" />
        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right">
            <Button x:Name="OkButton"
                    Content="OK"
                    Background="#3B82F6"
                    Foreground="White"
                    BorderThickness="0"
                    CornerRadius="6"
                    Padding="20,8"
                    Width="80" />
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Background="#E0E0E0"
                    Foreground="#15171D"
                    BorderThickness="0"
                    CornerRadius="6"
                    Padding="20,8"
                    Width="80" />
        </StackPanel>
    </StackPanel>
</Window>
