<?xml version="1.0" encoding="UTF-8"?>
<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="EasySave.GUI.Dialogs.CreateJobDialog"
        Title="Create New Job"
        Width="500"
        Height="400"
        WindowStartupLocation="CenterOwner"
        CanResize="False">
    <StackPanel Spacing="15" Margin="20">
        <!-- Job Name -->
        <StackPanel Spacing="8">
            <TextBlock Text="Job Name"
                       FontSize="13"
                       FontWeight="Bold"
                       Foreground="#15171D" />
            <TextBox x:Name="JobNameInput"
                     Foreground="#15171D"
                     Background="White"
                     BorderBrush="#E0E0E0"
                     BorderThickness="1"
                     CornerRadius="6"
                     Padding="12"
                     Height="40"
                     Watermark="Enter job name" />
        </StackPanel>

        <!-- Job Type -->
        <StackPanel Spacing="8">
            <TextBlock Text="Job Type"
                       FontSize="13"
                       FontWeight="Bold"
                       Foreground="#15171D" />
            <ComboBox x:Name="JobTypeInput"
                      Foreground="#15171D"
                      Background="White"
                      BorderBrush="#E0E0E0"
                      BorderThickness="1"
                      CornerRadius="6"
                      Padding="12"
                      Height="40">
                <ComboBoxItem>Full</ComboBoxItem>
                <ComboBoxItem>Differential</ComboBoxItem>
            </ComboBox>
        </StackPanel>

        <!-- Source Path -->
        <StackPanel Spacing="8">
            <TextBlock Text="Source Path"
                       FontSize="13"
                       FontWeight="Bold"
                       Foreground="#15171D" />
            <Grid ColumnDefinitions="*,40">
                <TextBox Grid.Column="0"
                         x:Name="SourcePathInput"
                         Foreground="#15171D"
                         Background="White"
                         BorderBrush="#E0E0E0"
                         BorderThickness="1"
                         CornerRadius="6"
                         Padding="12"
                         Height="40"
                         Watermark="Enter source directory path" />
                <Button Grid.Column="1"
                        x:Name="BrowseSourceButton"
                        Content="..."
                        Background="#F0F0F0"
                        Foreground="#15171D"
                        BorderThickness="1"
                        BorderBrush="#E0E0E0"
                        CornerRadius="6"
                        Margin="5,0,0,0"
                        Padding="0" />
            </Grid>
        </StackPanel>

        <!-- Destination Path -->
        <StackPanel Spacing="8">
            <TextBlock Text="Destination Path"
                       FontSize="13"
                       FontWeight="Bold"
                       Foreground="#15171D" />
            <Grid ColumnDefinitions="*,40">
                <TextBox Grid.Column="0"
                         x:Name="DestinationPathInput"
                         Foreground="#15171D"
                         Background="White"
                         BorderBrush="#E0E0E0"
                         BorderThickness="1"
                         CornerRadius="6"
                         Padding="12"
                         Height="40"
                         Watermark="Enter destination directory path" />
                <Button Grid.Column="1"
                        x:Name="BrowseDestinationButton"
                        Content="..."
                        Background="#F0F0F0"
                        Foreground="#15171D"
                        BorderThickness="1"
                        BorderBrush="#E0E0E0"
                        CornerRadius="6"
                        Margin="5,0,0,0"
                        Padding="0" />
            </Grid>
        </StackPanel>

        <!-- Buttons -->
        <StackPanel Orientation="Horizontal" Spacing="10" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button x:Name="CreateButton"
                    Content="Create"
                    Background="#22C55E"
                    Foreground="White"
                    BorderThickness="0"
                    CornerRadius="6"
                    Padding="20,8"
                    Width="100" />
            <Button x:Name="CancelButton"
                    Content="Cancel"
                    Background="#E0E0E0"
                    Foreground="#15171D"
                    BorderThickness="0"
                    CornerRadius="6"
                    Padding="20,8"
                    Width="100" />
        </StackPanel>
    </StackPanel>
</Window>
